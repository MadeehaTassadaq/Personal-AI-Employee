# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# =============================================================================
# Core Configuration
# =============================================================================
VAULT_PATH=./AI_Employee_Vault
API_PORT=8000
LOG_LEVEL=INFO

# Watcher Configuration
AUTO_START_WATCHERS=true  # Automatically start all watchers on backend startup

# Security Settings
DRY_RUN=true  # Set to false in production to enable real actions
MAX_ACTIONS_PER_HOUR=10
REQUIRE_APPROVAL_FOR_SEND=true

# =============================================================================
# Gmail API (OAuth2)
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_CREDENTIALS_PATH=./credentials/gmail_token.json

# =============================================================================
# WhatsApp Business API (Cloud API)
# =============================================================================
# Get credentials from: https://developers.facebook.com/apps
# 1. Create an app (Business type)
# 2. Add WhatsApp product
# 3. Get Phone Number ID and Access Token from WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_APP_ID=your_app_id_here
WHATSAPP_APP_SECRET=your_app_secret_here
WHATSAPP_VERIFY_TOKEN=your_random_verify_token_here

# Webhook configuration
# Your webhook URL: https://your-domain.com/api/whatsapp/webhook
# Configure this in Meta Business Suite > WhatsApp > Configuration

# =============================================================================
# LinkedIn API
# =============================================================================
# Register app at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_access_token_here

# =============================================================================
# Facebook/Meta API
# =============================================================================
# Create app at: https://developers.facebook.com/
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here
FACEBOOK_PAGE_ID=your_page_id_here

# =============================================================================
# Instagram API (uses Facebook Page Access Token)
# =============================================================================
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# =============================================================================
# Twitter/X API
# =============================================================================
# Register app at: https://developer.twitter.com/
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# =============================================================================
# Google Calendar API (OAuth2)
# =============================================================================
CALENDAR_CREDENTIALS_PATH=./credentials/client_secrets.json
CALENDAR_TOKEN_PATH=./credentials/calendar_token.json

# =============================================================================
# OPENAI API (for task decomposition)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Odoo Integration (Optional)
# =============================================================================
# ODOO_URL=http://localhost:8069
# ODOO_DB=odoo
# ODOO_USERNAME=admin
# ODOO_PASSWORD=admin

# =============================================================================
# Healthcare Auto-Approval Settings
# =============================================================================
# Automatically send appointment confirmations without approval
AUTO_CONFIRM_APPOINTMENTS=true

# Automatically create patients from new WhatsApp contacts
AUTO_ONBOARD_PATIENTS=true

# Automatically send appointment reminders (24h and 2h before)
AUTO_REMINDERS_ENABLED=true

# =============================================================================
# Reminder Settings
# =============================================================================
# Check interval for reminder scheduler (in seconds, default: 300 = 5 minutes)
REMINDER_CHECK_INTERVAL=300

# Enable 24-hour reminder
REMINDER_HOURS_24=true

# Enable 2-hour reminder
REMINDER_HOURS_2=true

# =============================================================================
# Odoo Appointment Watcher
# =============================================================================
# Enable Odoo appointment monitoring for auto-confirmations
ODOO_APPOINTMENT_WATCHER_ENABLED=true

# Poll interval for Odoo appointment watcher (in seconds, default: 60)
ODOO_APPOINTMENT_POLL_INTERVAL=60

# =============================================================================
# Patient Onboarding Settings
# =============================================================================
# Check interval for patient onboarding watcher (in seconds, default: 30)
PATIENT_ONBOARDING_CHECK_INTERVAL=30

# =============================================================================
# Safety Settings
# =============================================================================
# Maximum auto-approved messages per hour (rate limiting)
AUTO_APPROVE_MAX_PER_HOUR=50

# Allow auto-approval even for urgent messages (not recommended)
AUTO_APPROVE_URGENCY_OVERRIDE=false
