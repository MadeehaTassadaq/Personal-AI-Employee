# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# =============================================================================
# Core Configuration
# =============================================================================
VAULT_PATH=./AI_Employee_Vault
API_PORT=8000
LOG_LEVEL=INFO

# Security Settings
DRY_RUN=true  # Set to false in production to enable real actions
MAX_ACTIONS_PER_HOUR=10
REQUIRE_APPROVAL_FOR_SEND=true

# =============================================================================
# Gmail API (OAuth2)
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_CREDENTIALS_PATH=./credentials/gmail_token.json

# =============================================================================
# WhatsApp (Playwright session)
# =============================================================================
# Session is created after first QR code scan
WHATSAPP_SESSION_PATH=./credentials/whatsapp_session
WHATSAPP_HEADLESS=false

# =============================================================================
# LinkedIn API
# =============================================================================
# Register app at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_access_token_here

# =============================================================================
# Facebook/Meta API
# =============================================================================
# Create app at: https://developers.facebook.com/
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here
FACEBOOK_PAGE_ID=your_page_id_here

# =============================================================================
# Instagram API (uses Facebook Page Access Token)
# =============================================================================
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# =============================================================================
# Twitter/X API
# =============================================================================
# Register app at: https://developer.twitter.com/
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# =============================================================================
# Google Calendar API (OAuth2)
# =============================================================================
CALENDAR_CREDENTIALS_PATH=./credentials/client_secrets.json
CALENDAR_TOKEN_PATH=./credentials/calendar_token.json

# =============================================================================
# Claude API (for task decomposition)
# =============================================================================
CLAUDE_API_KEY=your_claude_api_key_here

# =============================================================================
# Odoo Integration (Optional)
# =============================================================================
# ODOO_URL=http://localhost:8069
# ODOO_DB=odoo
# ODOO_USERNAME=admin
# ODOO_PASSWORD=admin
