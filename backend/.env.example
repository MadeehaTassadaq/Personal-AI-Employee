# =============================================================================
# PERSONAL AI EMPLOYEE - ENVIRONMENT CONFIGURATION
# Healthcare Edition v3.0.0
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
VAULT_PATH=./AI_Employee_Vault
API_PORT=8000
DRY_RUN=false  # Set to 'true' for testing, 'false' for production

# -----------------------------------------------------------------------------
# Automation Settings
# -----------------------------------------------------------------------------
AUTO_CONFIRM_APPOINTMENTS=true
AUTO_ONBOARD_PATIENTS=true
AUTO_REMINDERS_ENABLED=true
AUTO_APPROVE_SAFE=false

# ----------------------------------------
# OpenAI LLM Configuration
# ----------------------------------------
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_CRITICAL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_CONCURRENT_REQUESTS=10
OPENAI_RATE_LIMIT_PER_MINUTE=100
OPENAI_RATE_LIMIT_PER_HOUR=1000

# -----------------------------------------------------------------------------
# Odoo EHR Configuration
# -----------------------------------------------------------------------------
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=admin
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432

# -----------------------------------------------------------------------------
# WhatsApp Business API
# -----------------------------------------------------------------------------
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# -----------------------------------------------------------------------------
# Gmail API (for email triage)
# -----------------------------------------------------------------------------
GMAIL_CREDENTIALS_PATH=./config/gmail_credentials.json
GMAIL_TOKEN_PATH=./config/gmail_token.json

# -----------------------------------------------------------------------------
# Social Media (Optional - for social posting features)
# -----------------------------------------------------------------------------
LINKEDIN_ACCESS_TOKEN=
FACEBOOK_PAGE_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ID=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# -----------------------------------------------------------------------------
# Calendar (Optional)
# -----------------------------------------------------------------------------
GOOGLE_CALENDAR_CREDENTIALS_PATH=./config/calendar_credentials.json

# ----------------------------------------
# Triage Agent Configuration
# ----------------------------------------
# Confidence thresholds (0.0-1.0)
TRIAGE_CONFIDENCE_THRESHOLD=0.7
TRIAGE_EMERGENCY_CONFIDENCE_THRESHOLD=0.9

# Default language
TRIAGE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
TRIAGE_SUPPORTED_LANGUAGES=en,es,fr,de,zh,ar,hi

# ----------------------------------------
# Medical Ethics & Guardrails
# ----------------------------------------
# AI behavior constraints
AI_MEDICAL_ETHICS_MODE=strict
AI_AUTO_DIAGNOSE=false
AI_AUTO_PRESCRIBE=false
AI_CLINICAL_NOTE_REQUIRES_APPROVAL=true

# Medical disclaimer
AI_MEDICAL_DISCLAIMER="Note: I am an AI assistant, not a doctor. This is not medical advice."

# Escalation rules
ESCALATE_ON_LOW_CONFIDENCE=true
ESCALATE_ON_EMOTION_DISTRESS=true
ESCALATE_ON_MEDICAL_ADVICE_REQUEST=true

# ----------------------------------------
# Cost Alerting
# ----------------------------------------
COST_ALERT_THRESHOLD_USD=10.0

# ----------------------------------------
# PHI Security
# ----------------------------------------
# Encryption
PHI_ENCRYPTION_ENABLED=true
PHI_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Anonymization for AI
PHI_ANONYMIZE_FOR_AI=true
PHI_LOG_REDACTION=true

# ----------------------------------------
# Conversation Storage
# ----------------------------------------
CONVERSATION_DB_PATH=./data/conversations/conversations.db
CONVERSATION_RETENTION_DAYS=90

# ----------------------------------------
# Audit Logging
# ----------------------------------------
AUDIT_LOG_PATH=./AI_Employee_Vault/Logs/AI_Audit.sqlite
AUDIT_LOG_RETENTION_DAYS=365

# ----------------------------------------
# Development & Testing
# ----------------------------------------
# Dry run mode (no real actions)
DRY_RUN=true

# Debug mode
DEBUG=false
LOG_LEVEL=INFO

# ----------------------------------------
# Feature Flags
# ----------------------------------------
FEATURE_TRIAGE_AGENT_ENABLED=true
FEATURE_APPOINTMENT_SCHEDULING_AI=true
FEATURE_CLINICAL_NOTES_AI=true
FEATURE_CEO_BRIEFING_AI=true
FEATURE_RALPH_WIGGUM_AI=true
