<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Patient List View -->
        <record id="view_patient_list" model="ir.ui.view">
            <field name="name">medical.patient.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list string="Patients">
                    <field name="name"/>
                    <field name="medical_record_number"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="blood_type"/>
                    <field name="risk_category"/>
                    <field name="is_patient" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Patient Form View -->
        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">medical.patient.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Patient Name"/>
                                <field name="is_patient" invisible="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                    <field name="date_of_birth"/>
                                    <field name="age" readonly="1"/>
                                    <field name="blood_type"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </group>
                            <group>
                                    <field name="risk_category"/>
                                    <field name="is_doctor" invisible="1"/>
                                    <field name="is_patient" invisible="1"/>
                                    <field name="insurance_provider"/>
                                    <field name="insurance_policy_number"/>
                                </group>
                        </group>
                        <notebook>
                            <page string="Medical Information">
                                <group>
                                        <field name="allergies"/>
                                        <field name="chronic_conditions"/>
                                        <field name="past_surgeries"/>
                                        <field name="family_history"/>
                                </group>
                                <group string="Women's Health">
                                        <field name="pregnancy_status"/>
                                        <field name="last_prenatal_checkup"/>
                                        <field name="expected_due_date"/>
                                </group>
                            </page>
                            <page string="Visit History">
                                <group>
                                        <field name="last_visit_date"/>
                                        <field name="next_appointment"/>
                                        <field name="total_visits"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Patient Search View -->
        <record id="view_patient_search" model="ir.ui.view">
            <field name="name">medical.patient.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Patients">
                    <field name="name"/>
                    <field name="medical_record_number"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="is_patient" invisible="1"/>
                </search>
            </field>
        </record>

        <!-- Patient Action -->
        <record id="action_patient_list" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_patient', '=', True)]</field>
            <field name="context">{'default_is_patient': True}</field>
            <field name="search_view_id" ref="view_patient_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient to get started.
                </p>
            </field>
        </record>

    </data>
</odoo>
