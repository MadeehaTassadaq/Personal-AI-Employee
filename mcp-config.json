{
  "mcpServers": {
    "gmail": {
      "command": "python",
      "args": ["-m", "mcp.gmail-mcp.server"],
      "env": {
        "GMAIL_CREDENTIALS_PATH": "./credentials/client_secrets.json",
        "GMAIL_TOKEN_PATH": "./credentials/gmail_token.json",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "whatsapp": {
      "command": "python",
      "args": ["-m", "mcp.whatsapp-mcp.server"],
      "env": {
        "WHATSAPP_SESSION_PATH": "./credentials/whatsapp_session",
        "WHATSAPP_HEADLESS": "false",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "linkedin": {
      "command": "python",
      "args": ["-m", "mcp.linkedin-mcp.server"],
      "env": {
        "LINKEDIN_ACCESS_TOKEN": "${LINKEDIN_ACCESS_TOKEN}",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "facebook": {
      "command": "python",
      "args": ["-m", "mcp.facebook-mcp.server"],
      "env": {
        "FACEBOOK_PAGE_ACCESS_TOKEN": "${FACEBOOK_PAGE_ACCESS_TOKEN}",
        "FACEBOOK_PAGE_ID": "${FACEBOOK_PAGE_ID}",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "instagram": {
      "command": "python",
      "args": ["-m", "mcp.instagram-mcp.server"],
      "env": {
        "FACEBOOK_PAGE_ACCESS_TOKEN": "${FACEBOOK_PAGE_ACCESS_TOKEN}",
        "INSTAGRAM_BUSINESS_ACCOUNT_ID": "${INSTAGRAM_BUSINESS_ACCOUNT_ID}",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "twitter": {
      "command": "python",
      "args": ["-m", "mcp.twitter-mcp.server"],
      "env": {
        "TWITTER_API_KEY": "${TWITTER_API_KEY}",
        "TWITTER_API_SECRET": "${TWITTER_API_SECRET}",
        "TWITTER_ACCESS_TOKEN": "${TWITTER_ACCESS_TOKEN}",
        "TWITTER_ACCESS_TOKEN_SECRET": "${TWITTER_ACCESS_TOKEN_SECRET}",
        "TWITTER_BEARER_TOKEN": "${TWITTER_BEARER_TOKEN}",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    },
    "browser": {
      "command": "python",
      "args": ["-m", "mcp.browser-mcp.server"],
      "env": {
        "BROWSER_HEADLESS": "true",
        "VAULT_PATH": "./vault",
        "DRY_RUN": "true"
      }
    }
  }
}
